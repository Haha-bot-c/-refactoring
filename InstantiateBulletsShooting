using System.Collections;
using UnityEngine;

[RequireComponent(typeof(Rigidbody))]
public class InstantiateBulletsShooting : MonoBehaviour
{
    [SerializeField] private float _bulletSpeed;
    [SerializeField] private GameObject _bulletPrefab;
    [SerializeField] private Transform _targetObject;
    [SerializeField] private float _timeBetweenShots;
    [SerializeField] private bool _isShooting = true;

    void Start()
    {
        StartCoroutine(ShootingCoroutine());
    }

    IEnumerator ShootingCoroutine()
    {
        WaitForSeconds wait = new(_timeBetweenShots);

        while (_isShooting)
        {
            
            Vector3 direction = (_targetObject.position - transform.position).normalized;
            
            GameObject newBullet = Instantiate(_bulletPrefab, transform.position + direction, Quaternion.identity);
            
            newBullet.GetComponent<Rigidbody>().AddForce(direction * _bulletSpeed, ForceMode.Impulse);

            yield return wait;
        }
    }
}
